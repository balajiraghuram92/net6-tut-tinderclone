@model List<Category> 
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary"> 
                Category List
            </h2>        
        </div>
        <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i>  Create New Category
        </a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th class="col-6 text-center">
            Category Name
        </th>
        <th></th>
        <th class="col-6 text-center">
            Display Order
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u => u.DIsplayOrder))
        {
        <tr>
            <td class="col-6 text-center">
                    @obj.Name
            </td>
            <th></th>
            <td class="col-6 text-center">
                @obj.DIsplayOrder
            </td>
            <td>
                <div style="display: flex; justify-content: flex-end;">
                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2" style="padding: 5px 10px; font-size: 0.8rem; margin-right: 20px;">
                            <i class="bi bi-pencil"></i>
                    </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id"  class="btn btn-primary mx-2" style="padding: 5px 10px; font-size: 0.8rem; margin-right: 20px;">
                            <i class="bi bi-trash3-fill"></i>
                        </a>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>